<?php $this->load->view('layout/header'); ?>
	<h1><i class="fa fa-lg fa-list"></i> {{ plural | title }}</h1>

	<div class="text-right">
		<a class="btn btn-primary" href="<?php echo base_url('{{ plural }}/create'); ?>">Create A New {{ singular | title }}</a>
	</div>

	<?php if ( ! empty(${{ plural }})): ?>
		<table class="table table table-striped table-hover">
			<thead>
				<tr>
{% for column in columns if not column.isPrimaryKey and column.field != 'datetime_created' and column.field != 'datetime_updated' %}
					<td>{{ column.field | replace({'_id': '', '_': ' '}) | title }}</td>
{% endfor %}
				</tr>
			</thead>
			<tbody>
				<?php foreach (${{ plural }} as ${{ singular }}): ?>
					<tr>
{% for column in columns if not column.isPrimaryKey and column.field != 'datetime_created' and column.field != 'datetime_updated' %}
						<td><?php echo ${{ singular }}->get_{{ (column.isForeignKey ? column.referencedTable : column.field) | underscore }}(); ?></td>
{% endfor %}
						<td>
							<a href="<?php echo base_url('{{ plural }}/edit/' . ${{ singular }}->{{ primary_key }}()); ?>"><i class="fa fa-edit fa-2x"></i>
							</a>
							<a href="<?php echo base_url('{{ plural }}/delete/' . ${{ singular }}->{{ primary_key }}()); ?>"><i class="fa fa-trash fa-2x"></i></a>
						</td>
					</tr>
				<?php endforeach; ?>
			</tbody>
		</table>
		<?php echo $links; ?>
	<?php elseif ($this->input->get('keyword')): ?>
		Your search - <b><?php echo $this->input->get('keyword') ?></b> - did not match any {{ plural | lower | replace({'_': ' '}) }}.
	<?php else: ?>
		There are no {{ plural | lower | replace({'_': ' '}) }} that are currently available.
	<?php endif; ?>
<?php $this->load->view('layout/footer'); ?>